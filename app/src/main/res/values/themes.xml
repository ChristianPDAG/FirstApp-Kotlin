<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyFirstApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyFirstApp" parent="Base.Theme.MyFirstApp" />

    <style name="Base.Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="android:statusBarColor">@color/todo_background_todo_app</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TodoApp" parent="Base.Theme.TodoApp" />

    <style name="TodoSubtitle">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/todo_subtitle_text</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginHorizontal">32dp</item>

    </style>

    <style name="SuperheroDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>